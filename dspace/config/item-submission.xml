<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE item-submission SYSTEM "item-submission.dtd">

<item-submission>
  <submission-map>
    <name-map collection-handle="default" submission-name="patents" />
  </submission-map>
  <step-definitions>
    <step id="collection" mandatory="true">
      <heading>submit.progressbar.describe.collection</heading>
      <processing-class>org.dspace.app.rest.submit.step.CollectionStep</processing-class>
      <type>collection</type>
      <scope visibility="hidden" visibilityOutside="hidden">submission</scope>
    </step>
    <step id="patents" mandatory="true">
      <heading>submit.progressbar.describe.patents</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
    <step id="upload" mandatory="true">
      <heading>submit.progressbar.upload</heading>
      <processing-class>org.dspace.app.rest.submit.step.UploadStep</processing-class>
      <type>upload</type>
    </step>
    <step id="license" mandatory="true">
      <heading>submit.progressbar.license</heading>
      <processing-class>org.dspace.app.rest.submit.step.LicenseStep</processing-class>
      <type>license</type>
      <scope visibilityOutside="read-only">submission</scope>
    </step>
    <step id="events" mandatory="true">
      <heading>submit.progressbar.describe.events</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
    <step id="orgunit" mandatory="true">
      <heading>submit.progressbar.describe.orgunit</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
    <step id="project" mandatory="true">
      <heading>submit.progressbar.describe.project</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
    <step id="journals" mandatory="true">
      <heading>submit.progressbar.describe.journals</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
    <step id="publications" mandatory="true">
      <heading>submit.progressbar.describe.publications</heading>
      <processing-class>org.dspace.app.rest.submit.step.DescribeStep</processing-class>
      <type>submission-form</type>
    </step>
  </step-definitions>
  <submission-definitions>
    <submission-process name="patents">
      <step id="collection" />
      <step id="patents" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="events">
      <step id="collection" />
      <step id="events" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="orgunit">
      <step id="collection" />
      <step id="orgunit" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="project">
      <step id="collection" />
      <step id="project" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="journals">
      <step id="collection" />
      <step id="journals" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
    <submission-process name="publications">
      <step id="collection" />
      <step id="publications" />
      <step id="upload" />
      <step id="license" />
    </submission-process>
  </submission-definitions>
</item-submission>

